{
    "$schema": "http://json-schema.org/draft-04/hyper-schema#",
    "id": "http://example.com/schema/person.json",
    "title": "Person resource definition",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "minimum": 1
        },
        "name": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]{1,32}$"
        }
    }
}
